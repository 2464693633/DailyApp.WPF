<UserControl x:Class="DailyApp.WPF.Views.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DailyApp.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:pwdEx="clr-namespace:DailyApp.WPF.Extensions">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Height" Value="450"/>
            <Setter Property="Width" Value="600"/>
            <!--<Setter Property="SizeToContent" Value="WidthAndHeight"/>-->
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen"/>
        </Style>
    </prism:Dialog.WindowStyle>
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!--显示错误提示-->
        <md:Snackbar x:Name="RegLoginBar" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                     Background="DarkMagenta" FontSize="33" FontStyle="Normal" 
                     MessageQueue="{md:MessageQueue}" >
        </md:Snackbar>
        
        <Image Source="/Images/金融数据-01.png" />

        <md:Transitioner Grid.Column="1" SelectedIndex="{Binding SelecedIndex,FallbackValue=1}">
            <!--第一块 登录-->
            <md:TransitionerSlide>
                <DockPanel Margin="20" VerticalAlignment="Center">
                    <TextBlock Text="欢迎使用" FontSize="25" FontWeight="Bold" Margin="0,0,0,5" DockPanel.Dock="Top"/>
                    <TextBox Height="30" Margin="0,0,0,10" FontSize="18" md:HintAssist.Hint="请输入账号" DockPanel.Dock="Top" Text="{Binding Account}"/>
                    <!--自定义扩展属性 附加属性 依赖属性-->
                    <PasswordBox Height="30" Margin="0,0,0,10" FontSize="18" md:HintAssist.Hint="请输入密码"  DockPanel.Dock="Top"
                                 pwdEx:PasswordBoxExtend.Pwd="{Binding Pwd,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Behaviors>
                            <pwdEx:PasswordBoxBehavior></pwdEx:PasswordBoxBehavior>
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <Button Content="登录系统" Height="40" FontSize="22" Background="#FF6200EE" Foreground="White"  DockPanel.Dock="Top" Command="{Binding LoginCmm}"/>

                    <DockPanel Margin="0,5" LastChildFill="False">
                        <TextBlock Text="注册账号" >
                            <i:Interaction.Triggers >
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding ShowRegInfoCmm}" >
                                        
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>

                        <TextBlock Text="忘记密码" DockPanel.Dock="Right">

                        </TextBlock>
                    </DockPanel>
                </DockPanel>
            </md:TransitionerSlide>
                
            <!--第二块 注册-->
            <md:TransitionerSlide>
                <DockPanel Margin="20" VerticalAlignment="Center">
                    <TextBlock Text="注册账户" FontSize="25" FontWeight="Bold" Margin="0,0,0,5" DockPanel.Dock="Top"/>
                    <TextBox Height="30" Margin="0,0,0,10" FontSize="18" md:HintAssist.Hint="请输入姓名" DockPanel.Dock="Top" Text="{Binding AccountInfoDTO.Name}"/>
                    <TextBox Height="30" Margin="0,0,0,10" FontSize="18" md:HintAssist.Hint="请输入账号"  DockPanel.Dock="Top" Text="{Binding AccountInfoDTO.Account}"/>
                    <PasswordBox Height="30" Margin="0,0,0,10" FontSize="18" md:HintAssist.Hint="请输入密码"  DockPanel.Dock="Top"
             pwdEx:PasswordBoxExtend.Pwd="{Binding AccountInfoDTO.Pwd,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Behaviors>
                            <pwdEx:PasswordBoxBehavior></pwdEx:PasswordBoxBehavior>
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <PasswordBox Height="30" Margin="0,0,0,10" FontSize="18" md:HintAssist.Hint="请再次输入密码"  DockPanel.Dock="Top"
             pwdEx:PasswordBoxExtend.Pwd="{Binding AccountInfoDTO.ConfirmPwd,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Behaviors>
                            <pwdEx:PasswordBoxBehavior></pwdEx:PasswordBoxBehavior>
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <Button Content="注册" Height="40" FontSize="22" DockPanel.Dock="Top" Command="{Binding RegCmm}"/>
                    <Button Content="返回登录" Height="40" FontSize="22" Margin="0,15,0,0" Style="{StaticResource MaterialDesignOutlinedButton}" DockPanel.Dock="Top"
                            Command="{Binding ShowLoginInfoCmm}" />

                </DockPanel>
            </md:TransitionerSlide>
        </md:Transitioner>
    </Grid>
</UserControl>
